<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#000"
    android:paddingBottom="1dp"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="vertical"
    android:id="@+id/webtopview"
    android:background="#000"
    >
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="60dp"
        android:background="#000"
        android:id="@+id/topview"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/webimg"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            />
    </android.support.v7.widget.Toolbar>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="10dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:id="@+id/mainpagewebprogress"
        />
</LinearLayout>
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dp"
        android:id="@+id/webviewframe"
        ></FrameLayout>
    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="16sp"
        android:id="@+id/mainpageweb"
        android:layout_below="@+id/webtopview"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:padding="5dp"
        android:layout_marginBottom="65dp"
        />
    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/flip"
        android:inAnimation="@android:anim/slide_in_left"
        android:outAnimation="@android:anim/slide_out_right"
        android:flipInterval="5000"
        >
    <com.luseen.spacenavigation.SpaceNavigationView
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/fowardtrackarrow"
                android:id="@+id/swipeicon"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"

                />
            <Spinner
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:background="#fff"
                android:id="@+id/webselection"
                android:layout_toRightOf="@+id/swipeicon"
                />

            <com.optimus.edittextfield.EditTextField
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="1dp"
                android:hint="google.com"
                android:imeOptions="actionSearch"
                android:gravity="center"
                android:background="#fff"
                android:singleLine="true"
                android:inputType="textWebEditText"
                android:layout_toRightOf="@+id/webselection"
                android:id="@+id/webinput"
                app:clearButtonMode="whileEditing"
                />

        </RelativeLayout>

    </ViewFlipper>

</RelativeLayout>