<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PLease Enable Camera and storage Permission for CGC Student Portal in Setting :"
        android:gravity="center"
        android:textSize="15dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Camera Permission :\n\nGo to Settings/Privacy and Safety/Camera/CGC Student Portal"
        android:gravity="center"
        android:textColor="#dcd30202"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/camerapermi"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Storage Permission :\n\nGo to Settings/Privacy and Safety/Storage/CGC Student Portal"
        android:gravity="center"
        android:textColor="#dc020efa"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:src="@drawable/storagepermi"
       android:layout_marginTop="10dp"
        />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_marginTop="20dp"
    android:text="OK"
    android:id="@+id/campermibtn"
    />
</LinearLayout>
</ScrollView>
</RelativeLayout>