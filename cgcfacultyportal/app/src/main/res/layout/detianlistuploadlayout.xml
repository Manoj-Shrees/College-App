<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_margin="8dp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detain - List"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#0739df"
        android:id="@+id/txt"
        android:layout_marginTop="20dp"
        />
    <TextView
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#000"
        android:layout_margin="10dp"
        android:layout_below="@+id/txt"
        android:id="@+id/newsfeedsep"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newsfeedsep"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="#c823bdb0"
        app:cardElevation="7dp"
        app:cardCornerRadius="5dp"
        android:layout_margin="15dp"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerlayout"
                    android:orientation="horizontal"
                    >
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="20dp"
                        android:id="@+id/detainlistsem"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:foregroundGravity="center"
                        android:backgroundTint="#dfc6fa"
                    />
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_toRightOf="@+id/detainlistsem"
                        android:id="@+id/detainlistsection"
                        android:foregroundGravity="center"
                        android:backgroundTint="#dfc6fa"
                        />
                </LinearLayout>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#000"
                    android:layout_margin="20dp"
                    android:textAlignment="center"
                    android:id="@+id/detainlistoption"
                    android:layout_below="@+id/spinnerlayout"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detainlistoption"
                    android:id="@+id/detainlisttxt"
                    android:textColor="#000"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:text="Select File :"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detainlisttxt"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#1c1c1c"
                    android:background="#59f5e905"
                    android:gravity="center"
                    android:id="@+id/filetxt"
                    android:layout_centerHorizontal="true"
                    />
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/dlopenfile"
                    android:layout_below="@+id/detainlistoption"
                    android:layout_toRightOf="@+id/detainlisttxt"
                    android:background="@drawable/folder"
                    />
                <ProgressBar
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:paddingTop="8dp"
                    android:layout_marginTop="10dp"
                   android:layout_centerHorizontal="true"
                    android:visibility="gone"
                    android:id="@+id/dlpbar"
                    android:layout_below="@+id/filetxt"
                    />
                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/fileupload"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/dlpbar"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/dlupbtn"
                    />

            </RelativeLayout>
        </ScrollView>

    </android.support.v7.widget.CardView>
        </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close"
        android:id="@+id/deatinlistpostdialogclose"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        />

        </RelativeLayout>

</RelativeLayout>