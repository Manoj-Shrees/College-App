<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_margin="8dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEWSFEED"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#0333d3"
            android:id="@+id/txt"
            android:layout_marginTop="20dp"
            />
        <TextView
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#000"
            android:layout_margin="10dp"
            android:layout_below="@+id/txt"
            android:id="@+id/newsfeedsep"
            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/newsfeedsep"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="#d90eccad"
                    app:cardElevation="7dp"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="8dp"
                    android:id="@+id/feedcard"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColorHint="#000"
                            android:hint="Topic"
                            android:paddingTop="30dp"
                            android:layout_margin="10dp"
                            android:id="@+id/txttopic"
                            >
                            <EditText
                                android:id="@+id/newsfeedtopictxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:singleLine="true"
                                android:textSize="20dp"
                                android:layout_marginTop="25dp"
                                />
                            <requestFocus />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColorHint="#000"
                            android:hint="Message Content"
                            android:id="@+id/txtcontent"
                            android:paddingTop="30dp"
                            android:layout_margin="10dp"
                            android:layout_below="@+id/txttopic"
                            >
                            <EditText
                                android:id="@+id/newsfeedcontent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:inputType="textMultiLine"
                                android:textSize="20dp"
                                android:shadowColor="#000"
                                android:layout_marginTop="25dp"
                                />
                        </android.support.design.widget.TextInputLayout>
                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtcontent"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:id="@+id/semselection"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/spinnerlayout"
                            android:layout_below="@+id/semselection"
                            android:orientation="horizontal"
                            >
                            <Spinner
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginTop="20dp"
                                android:id="@+id/feedsem"
                                android:layout_weight="1"
                                android:layout_marginLeft="20dp"
                                android:foregroundGravity="center"
                                android:backgroundTint="#dfc6fa"
                                />
                            <Spinner
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:layout_toRightOf="@+id/feedsem"
                                android:id="@+id/feedsection"
                                android:foregroundGravity="center"
                                android:backgroundTint="#dfc6fa"
                                />
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/spinnerlayout"
                            android:id="@+id/imgtxthead"
                            android:layout_centerHorizontal="true"
                            android:text="select Image (optional)"
                            android:layout_marginTop="20dp"
                            android:textSize="17dp"
                            android:textColor="#000000"
                            />
                        <TextView
                            style="?android:attr/listSeparatorTextViewStyle"
                            android:layout_margin="20dp"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:background="#25000000"
                            android:layout_below="@+id/imgtxthead"
                            android:id="@+id/newsfeedsep2"
                            />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:layout_below="@+id/imgtxthead"
                            android:id="@+id/newsfeedimageinput"
                            android:src="@drawable/camerawide"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:layout_margin="20dp"
                            />
                        <ProgressBar
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:paddingTop="8dp"
                            android:layout_marginTop="5dp"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/nwpbar"
                            android:visibility="gone"
                            android:layout_below="@+id/newsfeedimageinput"
                            />
                        <Button
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:background="@drawable/post"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_below="@+id/nwpbar"
                            android:id="@+id/feedpost"
                            />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>


            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close"
        android:id="@+id/newsfeedpostclose"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        />
        </RelativeLayout>
</RelativeLayout>