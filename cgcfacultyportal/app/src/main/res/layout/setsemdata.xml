<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_margin="8dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FILTERS"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#0333d3"
            android:id="@+id/txt"
            android:layout_marginTop="20dp"
            />
        <TextView
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#000"
            android:layout_margin="10dp"
            android:layout_below="@+id/txt"
            android:id="@+id/newsfeedsep"
            />
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="#d96049bc"
                    app:cardElevation="7dp"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/newsfeedsep"
                    android:id="@+id/feedcard"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/spinnerlayout"
                            android:layout_below="@+id/semselection"
                            android:orientation="horizontal"
                            >
                            <Spinner
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginTop="20dp"
                                android:id="@+id/filtersem"
                                android:layout_weight="1"
                                android:layout_marginLeft="20dp"
                                android:foregroundGravity="center"
                                android:backgroundTint="#dfc6fa"
                                />
                            <Spinner
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:layout_toRightOf="@+id/filtersem"
                                android:id="@+id/filtersection"
                                android:foregroundGravity="center"
                                android:backgroundTint="#dfc6fa"
                                />
                        </LinearLayout>

                        <Button
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:text="Update"
                            android:background="#c8000000"
                            android:textColor="#fff"
                            android:layout_marginTop="20dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_below="@+id/spinnerlayout"
                            android:id="@+id/filterbtn"
                            />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>


            </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close"
        android:id="@+id/semfilterclose"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>