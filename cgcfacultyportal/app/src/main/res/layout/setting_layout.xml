<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333232"
        android:id="@+id/settingtoolbar"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        >
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:id="@+id/usersetting"
            android:background="@drawable/defaultuserprofile"
            />
    </android.support.v7.widget.Toolbar>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#04e7f7"
    android:textSize="20dp"
    android:text="Notification Sound"
    android:layout_below="@+id/settingtoolbar"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="40dp"
    android:id="@+id/label1"
    />
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/notificationicon"
        android:layout_below="@+id/settingtoolbar"
        android:id="@+id/notifactionsoundselecter"
        android:layout_toRightOf="@+id/label1"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="23dp"
        app:fabSize="mini"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Default"
        android:layout_below="@+id/label1"
        android:textColor="#fff"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:id="@+id/lbnot"
        />
    <TextView
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#fff"
        android:layout_below="@+id/lbnot"
        android:id="@+id/seprator1"
        />
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Vibrate"
    android:textColor="#04e7f7"
    android:textSize="20dp"
    android:layout_below="@+id/seprator1"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="40dp"
    android:id="@+id/label2"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#fff"
        android:layout_below="@+id/seprator1"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:text="Enabled"
        android:checked="true"
        android:textColor="#fff"
        android:buttonTint="#fff"
        android:id="@+id/vibratorsetting"
        />
    <TextView
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#fff"
        android:layout_below="@+id/label2"
        android:id="@+id/seprator2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Light"
        android:textColor="#04e7f7"
        android:textSize="20dp"
        android:layout_below="@+id/seprator2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/label3"
        />
    <Spinner
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seprator2"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#fff"
        android:popupBackground="#7979f7"
        android:id="@+id/lightselector"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is applicable only for those device which have Light Indicator."
       android:layout_below="@+id/label3"
        android:textColor="#fff"
        android:id="@+id/lightmsg"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="10dp"
        />
    <TextView
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#fff"
        android:layout_below="@+id/lightmsg"
        android:id="@+id/seprator3"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        android:textSize="20dp"
        android:textColor="#f9f7f7"
        android:layout_below="@+id/seprator3"
        android:background="#43d3d3"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:id="@+id/settingbutton"
        />
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/settingbutton"
        android:layout_marginTop="20dp"
        android:background="@drawable/ajka"
        />
</RelativeLayout>